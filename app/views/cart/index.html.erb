<div class="container pb-5">

  <div class="row">
    <div class="col-8">
      <h2 class="h2 text-success">Cart</h2>
      <% cart.map do |item| %>
            <%= render partial: 'item',  locals: { book: item[:book], quantity: item[:quantity] }  %>
      <% end %>

    </div>
    <div class="col-4">
      <h2 class="h2 text-success">Summary</h2>
      <div class="dropdown-divider"></div>
      <div class="row">
        <div class="col-6">
          <p class="text-secondary font-weight-bolder">Subtotal</p>
        </div>
        <div class="col-6">
          <p class="text-info text-right"><%= number_to_currency total_price %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <p class="text-secondary font-weight-bolder">Taxes </p>
        </div>
        <div class="col-6">
          <p class="text-info text-right">--</p>
        </div>
      </div>
      <div class="dropdown-divider"></div>
      <div class="row">
        <div class="col-6">
          <p class="text-secondary font-weight-bolder">Total</p>
        </div>
        <div class="col-6">
          <p class="text-info text-right"><%= number_to_currency total_price %></p>
        </div>
      </div>
      <div class="dropdown-divider"></div>
      <% if items_quantity >0 %>
        <div class="row">
          <div class="col-12">
            <%=link_to "Checkout", checkout_index_path, class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>

  <div>

</div>