<div class="dropdown-divider"></div>
<div class="row">
  <div class="col-3">
      <% if book.cover_s != ''%>
        <%=link_to image_tag(book.cover_s, class: "img-fluid rounded", alt:"Cover Small Image") , book %>
      <% else %>
        <%= image_tag "no_image.png", width: 60, alt: "No Image", class: "img-fluid rounded" %>
      <% end %>
  </div>
  <div class="col-6">
      <p class="text-info">
        <%= link_to book.title, book%>
      </p>
      <div class="dropdown-divider"></div>
      <p class="text-info">
        Qty: <%=quantity%>
      </p>
  </div>
  <div class="col-3">
    <% if book.sales > 0.0099%>
      <p class="text-info text-right"><%= number_to_currency book.price * quantity * (1 - book.sales.floor(2)) %></p>
    <% else %>
      <p class="text-info text-right"><%= number_to_currency book.price * quantity %> </p>
    <% end %>
  </div>
</div>