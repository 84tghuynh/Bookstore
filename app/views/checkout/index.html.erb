<div class="container pb-5">
  <div class="row">
    <div class="col-7">
      <%= render partial: 'form' %>
    </div>

    <div class="col-5">
      <h2 class="h2 text-success">Summary</h2>
      <div class="dropdown-divider"></div>
      <div class="row">
        <div class="col-6">
          <p class="text-secondary font-weight-bolder">Subtotal</p>
        </div>
        <div class="col-6">
          <p class="text-info text-right"><%= number_to_currency total_price %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <p class="text-secondary font-weight-bolder">Taxes</p>
        </div>
        <div class="col-6">
          <p class="text-info text-right"></p>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <p class="text-secondary font-weight-bolder pl-4">PST</p>
        </div>
        <div class="col-2">
          <p class="text-info text-right">(<%=number_to_percentage(@province.pst * 100, precision:0)%>)</p>
        </div>
        <div class="col-4">
          <p class="text-info text-right"><%= number_to_currency total_price * @province.pst %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <p class="text-secondary font-weight-bolder pl-4">GST</p>
        </div>
        <div class="col-2">
          <p class="text-info text-right">(<%=number_to_percentage(@province.gst * 100, precision:0)%>)</p>
        </div>
        <div class="col-4">
          <p class="text-info text-right"><%= number_to_currency total_price * @province.gst %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <p class="text-secondary font-weight-bolder pl-4">HST</p>
        </div>
        <div class="col-2">
          <p class="text-info text-right">(<%=number_to_percentage(@province.hst * 100, precision:0)%>)</p>
        </div>
        <div class="col-4">
          <p class="text-info text-right"><%= number_to_currency total_price * @province.hst %></p>
        </div>
      </div>
      <div class="dropdown-divider"></div>
      <div class="row">
        <div class="col-6">
          <p class="text-secondary font-weight-bolder">Total</p>
        </div>
        <div class="col-6">
          <p class="text-info text-right"><%= number_to_currency total_price_with_tax %></p>
        </div>
      </div>

      <h2 class="h2 text-success">Cart</h2>
      <% cart.map do |item| %>
            <%= render partial: 'item',  locals: { book: item[:book], quantity: item[:quantity] }  %>
      <% end %>
    </div>
  </div>
</div>