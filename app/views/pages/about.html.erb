<div class="container">

<% @page.each do |p|%>
  <div class="row">
    <div class="col-sm">
      <h3 class="text-info"><%=p.title%></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-11">
      <div class="d-flex justify-content-center">
        <p><%=p.content%></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
        <% if p.image.present? %>
            <%=link_to image_tag(p.image, alt: "No Image", class: "card-img-top") %>
        <% end %>
    </div>
  </div>

<%end%>

</div>























