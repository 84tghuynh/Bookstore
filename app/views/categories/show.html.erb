<div class="container-md pb-5">

<div class="row">

  <div class="col-md-3">
    <% @categories.each_with_index do |category, i|%>
      <% if i == 0 %>
          <div class="row border border-primary rounded-top ">
            <%= link_to category.name, category, class: "dropdown-item #{current_page?(category) ? 'active' : '' } " %>
          </div>
      <% elsif i < @categories.count-1 %>
          <div class="row border-left border-right border-bottom border-primary ">
            <%= link_to category.name, category, class:"dropdown-item #{current_page?(category) ? 'active' : '' }" %>
          </div>
      <% else%>
          <div class="row border-left border-right border-bottom border-primary rounded-bottom">
            <%= link_to category.name, category, class:"dropdown-item #{current_page?(category) ? 'active' : '' }" %>
          </div>

      <% end %>
    <% end %>
    <div class="row mt-2">
        <div class=" col-md-12 dropdown-divider"></div>
    </div>
    <div class="row">
        <div class="col-md-12">
          <h5 class="text-info text-uppercase font-weight-bolder">Filter</h5>
        </div>
    </div>
    <%= form_with(url: category_path, method: "get", local: true, class: "form-check") do %>
    <div class="row">
        <div class="col-md-12">
                <%= check_box_tag(:on_sale, 0, @sales_check, class: "form-check-input",  onclick: "this.form.submit();") %>
                <%= label_tag(:on_sale, "On Sales", class: "form-check-label") %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <%= check_box_tag(:last_update, 0, @update_check, class: "form-check-input", onclick: "this.form.submit();") %>
            <%= label_tag(:last_update, "Last Updates", class: "form-check-label") %>
        </div>
    </div>
    <% end %>
    <div class="row mt-2">
        <div class=" col-md-12 dropdown-divider"></div>
    </div>
  </div>
  <div class="col-md-9">
    <% if @books.count >= 1%>
        <div class="row">
          <div class="col-md-12">
            <%= pagy_bootstrap_nav(@pagy).sub('class="pagination"', 'class="pagination  justify-content-end"').html_safe  %>
          </div>
        </div>
    <% end %>

        <% @books.each_slice(4) do |batch| %>
          <div class="row my-2">
              <%batch.each do | book | %>
                <div class= "col-md-3 my-2">
                    <div class="card">
                      <% if book.cover_s != ''%>
                        <%=link_to image_tag(book.cover_m, class: "card-img-top rounded", alt:"Cover Small Image") , book %>
                      <% else %>
                        <%=link_to image_tag("no_image.png", class: "card-img-top rounded", alt:"No Image") , book %>
                      <% end %>
                      <div class="card-body ">
                        <h6 class="card-title text-uppercase"><%=link_to book.title, book ,class:"text-success" %></h6>
                        <div class="card-text normal"><span class="font-weight-bold">Price:</span> $<%= book.price %></div>
                        <div class="card-text font-weight-normal">
                      <small>
                      <span class="font-weight-bold">Author:</span>
                        <% book.authors.each_with_index do |author, i| %>
                              <% if i <= 3 %>
                                <% if i == 0 %>
                                  <%= author.name %>
                                <% else %>
                                    , <%= author.name %>
                                <% end %>
                              <% end %>
                          <% end %>
                      </small>
                        </div>
                        <div class="card-text font-weight-normal"><small><span class="font-weight-bold">ISBN: </span><%= book.isbn %></small></div>
                        <div class="card-text font-weight-normal"><small><span class="font-weight-bold">Publish date:</span> <%= book.publish_date %></small></div>
                      </div>
                    </div>
                </div>
              <% end %>
          </div>
        <% end %>
<% if @books.count >= 1%>
        <div class="row">
          <div class="col-md-12">
            <%= pagy_bootstrap_nav(@pagy).sub('class="pagination"', 'class="pagination  justify-content-end"').html_safe  %>
          </div>
<%end%>        </div>

  </div>

</div>

</div>


