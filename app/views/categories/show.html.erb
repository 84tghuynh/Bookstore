<div class="container-md pb-5">

  <div class="row">
    <%= render partial: 'common/left_sidebar'%>
    <div class="col-md-9">
      <% if @books.count >= 1%>
        <div class="row">
          <div class="col-md-12">
            <%= pagy_bootstrap_nav(@pagy).sub('class="pagination"', 'class="pagination  justify-content-end"').html_safe  %>
          </div>
        </div>
      <% end %>

          <% @books.each_slice(4) do |batch| %>
          <div class="row my-2">
              <%batch.each do | book | %>
                <%= render partial: 'books/book',  locals: { book: book }  %>
              <% end %>
          </div>
          <% end %>
      <% if @books.count >= 1%>
          <div class="row">
            <div class="col-md-12">
              <%= pagy_bootstrap_nav(@pagy).sub('class="pagination"', 'class="pagination  justify-content-end"').html_safe  %>
            </div>
          </div>
      <%end%>
    </div>

  </div>

</div>


